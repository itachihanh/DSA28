#include <bits/stdc++.h>
using namespace std;
#define ll long long

int main() {
    int n;
    cin >> n;
    int a[n + 1], dp[n + 1];
    memset(dp, 0, sizeof(dp));
    for(int i = 1; i <= n; i++) cin >> a[i];
    for(int i = 1; i <= n; i++) {
        int id = i, cnt = 1;
        for(int j = i + 1; j <= n; j++) {
            if(a[j] > a[j - 1]) {
                i = j;
                ++cnt;
            }
            else break;
        }
        dp[i] = dp[id] = cnt;
    }
    int ans = 1;
    for(int i = 1; i <= n; i++) {
        ans = max(ans, dp[i]);
        if((i - 1 >= 1 && i + 1 <= n && a[i] <= a[i - 1] && a[i + 1] > a[i - 1]) || (i - 2 >= 1 && a[i] <= a[i - 1] && a[i] > a[i - 2])) {
            ans = max(ans, dp[i - 1] + dp[i] - 1);
        }
    }
    cout << ans;
}
