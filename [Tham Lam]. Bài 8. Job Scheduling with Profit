#include <bits/stdc++.h>

using namespace std;
#define ll long long
const int mod = 1e9 + 7;

bool cmp (pair <int, int> a, pair <int, int> b) {
    return a.second > b.second;
}

int main() {
    int n;
    cin >> n;
    pair <int, int> a[n];
    for(int i = 0; i < n; i++) {
        int tmp; cin >> tmp;
        cin >> a[i].first >> a[i].second;
    }
    sort(a, a + n, cmp);
    int ans = 0;
    int cnt[n] = {0};
    for(int i = 0; i < n; i++) {
        for(int j = a[i].first - 1; j >= 0; j--) {
            if(cnt[j] == 0) {
                ans += a[i].second;
                cnt[j] = 1;
                break;
            }
        }
    }
    cout << ans;
}
